@page "/classrooms"

<PageTitle>My Classrooms</PageTitle>

<MudContainer Class="pt-3" MaxWidth="MaxWidth.ExtraLarge">
    <MudStack>
        <MudStack Row>
            <MudText Typo="Typo.h3">
                My Classrooms
            </MudText>
            <MudIconButton Size="Size.Large" Icon="@Icons.Material.Filled.Add" Color="Color.Primary" />
        </MudStack>
        @if (_isLoading)
        {
            <MudProgressCircular Color="Color.Info" Indeterminate="true" />
        }
        else if (!_classrooms.Any())
        {
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h6" Align="Align.Center">
                        You do not have any classrooms yet. Click the + button to create a new classroom.
                    </MudText>
                </MudCardContent>
            </MudCard>
        }
        else
        {
            <MudList T="string">
                @foreach (ClassroomDto classroom in _classrooms)
                {
                    <MudListItem Text="@classroom.ClassName" />
                }
            </MudList>
        }
    </MudStack>
</MudContainer>
